<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6">

    <TextView
        android:id="@+id/tv_show"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#FFCCCC"
        android:text="0"
        android:textSize="50sp" />

    <Button
        android:id="@+id/bt_back"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="回退" />

    <Button
        android:id="@+id/bt_clean"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="清空" />

    <Button
        android:id="@+id/bt_add"
        android:text="+" />

    <Button
        android:id="@+id/bt_1"
        android:text="1" />

    <Button
        android:id="@+id/bt_2"
        android:text="2" />

    <Button
        android:id="@+id/bt_3"
        android:text="3" />

    <Button
        android:id="@+id/bt_subtract"
        android:text="-" />

    <Button
        android:id="@+id/bt_4"
        android:text="4" />

    <Button
        android:id="@+id/bt_5"
        android:text="5" />

    <Button
        android:id="@+id/bt_6"
        android:text="6" />

    <Button
        android:id="@+id/bt_multiply"
        android:text="*" />

    <Button
        android:id="@+id/bt_7"
        android:text="7" />

    <Button
        android:id="@+id/bt_8"
        android:text="8" />

    <Button
        android:id="@+id/bt_9"
        android:text="9" />

    <Button
        android:id="@+id/bt_divide"
        android:text="/" />

    <Button
        android:id="@+id/bt_dot"
        android:layout_width="wrap_content"
        android:text="." />

    <Button
        android:id="@+id/bt_0"
        android:text="0" />

    <Button
        android:id="@+id/bt_equals"
        android:text="=" />

</GridLayout>
